<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        Width="600" Height="500"
        x:Class="Elbrus.OrderDetailsWindow"
        Title="Детали заказа"
        FontFamily="Arial">
    
    <Grid Margin="20" RowDefinitions="Auto,Auto,*,Auto" ColumnDefinitions="*">
        <TextBlock Grid.Row="0" Text="Информация о заказе" 
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>
        
        <Border Grid.Row="1" Background="#FFF0F0" CornerRadius="5" Padding="10"
                HorizontalAlignment="Stretch" Margin="0,0,0,15">
            <TextBlock x:Name="StatusText" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#D32F2F"/>
        </Border>

        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" 
                CornerRadius="5" Padding="15">
            <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*">
                <TextBlock Text="Номер заказа:" FontWeight="SemiBold"/>
                <TextBlock x:Name="OrderNumber" Grid.Column="1"/>
                
                <TextBlock Text="Клиент:" Grid.Row="1" FontWeight="SemiBold"/>
                <TextBlock x:Name="ClientName" Grid.Column="1" Grid.Row="1"/>
                
                <TextBlock Text="Дата и время:" Grid.Row="2" FontWeight="SemiBold"/>
                <TextBlock x:Name="OrderDate" Grid.Column="1" Grid.Row="2"/>
                
                <TextBlock Text="Услуги:" Grid.Row="3" FontWeight="SemiBold"/>
                <ScrollViewer Grid.Column="1" Grid.Row="3" MaxHeight="150">
                    <ItemsControl x:Name="ServicesList"/>
                </ScrollViewer>
                
                <TextBlock Text="Общая стоимость:" Grid.Row="4" FontWeight="SemiBold"/>
                <TextBlock x:Name="TotalCost" Grid.Column="1" Grid.Row="4" FontSize="16"/>
            </Grid>
        </Border>
        

        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Spacing="10" Margin="0,15,0,0">
            <Button Content="Печать штрих-кода" Click="PrintBarcode_Click" 
                    Width="150" Height="35" Classes="Primary"/>
            <Button Content="Закрыть" Click="Close_Click" 
                    Width="150" Height="35"/>
        </StackPanel>
    </Grid>
</Window>